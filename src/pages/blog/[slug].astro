---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.data.postSlug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
	<article class="max-w-xl mx-auto px-6 py-16 md:py-24">
		<a href="/blog" class="text-[15px] text-neutral-600 hover:text-orange-600 mb-6 inline-block">← Writing</a>
		
		<header class="mb-8">
			<h1 class="text-2xl font-normal text-neutral-900 mb-2">{post.data.title}</h1>
			<div class="flex items-center gap-3 text-sm text-neutral-500">
				<time datetime={post.data.pubDatetime.toISOString()}>
					{post.data.pubDatetime.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
				</time>
				<span>·</span>
				<span>{post.data.author}</span>
			</div>
		</header>

		<div class="prose prose-neutral prose-base">
			<Content />
		</div>
	</article>
</Layout>

<style is:global>
	.prose {
		color: #404040;
		max-width: none;
	}
	
	.prose p {
		margin-top: 1.25em;
		margin-bottom: 1.25em;
		line-height: 1.7;
	}
	
	.prose h3 {
		font-size: 1.125rem;
		font-weight: 600;
		margin-top: 2em;
		margin-bottom: 1em;
		color: #171717;
	}
	
	.prose strong {
		font-weight: 600;
		color: #171717;
	}
	
	.prose a {
		color: #ea580c;
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 2px;
	}
	
	.prose a:hover {
		color: #c2410c;
	}
	
	.prose code {
		background: #f5f5f4;
		padding: 0.2em 0.4em;
		border-radius: 3px;
		font-size: 0.9em;
		font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
	}
	
	.prose pre {
		background: #fafaf9;
		border: 1px solid #e7e5e4;
		border-radius: 6px;
		padding: 1em;
		overflow-x: auto;
		margin-top: 1.5em;
		margin-bottom: 1.5em;
	}
	
	.prose pre code {
		background: none;
		padding: 0;
		border-radius: 0;
		font-size: 0.875em;
		line-height: 1.7;
	}
	
	.prose hr {
		border: none;
		border-top: 1px solid #e7e5e4;
		margin-top: 3em;
		margin-bottom: 3em;
	}
</style>

